<Page x:Class="WpfChatClient.Friend"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfChatClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Friend">

    <Grid>
        <TextBox x:Name="sel_friend" HorizontalAlignment="Left" Height="26" Margin="295,33,0,0" TextWrapping="Wrap" Text="{Binding SelectedItem.friend_id, ElementName=friend_list}" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="delete_friend" Content="삭제" HorizontalAlignment="Left" Margin="295,64,0,0" VerticalAlignment="Top" Width="120" Click="Delete_friend_Click" Height="30"/>
        <TextBox x:Name="new_friend" HorizontalAlignment="Left" Height="26" Margin="295,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="add_friend" Content="친구추가" HorizontalAlignment="Left" Margin="295,161,0,0" VerticalAlignment="Top" Width="120" Click="Add_friend_Click" Height="30"/>

        <ListView Margin="28,33,533,92" x:Name="friend_list">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="sel" Header="Name" Width="120" DisplayMemberBinding="{Binding friend_id}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="menu" Content="메뉴로" HorizontalAlignment="Left" Margin="295,227,0,0" VerticalAlignment="Top" Width="120" Click="Menu_Click" Height="30"/>
    </Grid>
</Page>
